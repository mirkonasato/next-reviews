generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // or env("DATABASE_URL")
}

model Comment {
  id       String   @id @default(uuid())
  slug     String   // same as Review.slug in Strapi
  user     String
  message  String
  postedAt DateTime @default(now())
}
